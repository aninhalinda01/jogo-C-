#include <iostream>
#include <cstdlib> // Para a função rand() e srand()
#include <ctime>   // Para a função time()

using namespace std;

int main() {
    // 1. Inicializa o gerador de números aleatórios
    // Usa o tempo atual para garantir que o número seja diferente a cada execução
    srand(time(0)); 

    // 2. Gera o número secreto (entre 1 e 100)
    int numeroSecreto = rand() % 100 + 1;
    int palpite = 0;
    int tentativas = 0;

    cout << "========================================" << endl;
    cout << "         JOGO: ADIVINHE O NUMERO        " << endl;
    cout << "========================================" << endl;
    cout << "Tente adivinhar o numero secreto (entre 1 e 100)." << endl;

    // 3. Loop principal do jogo
    do {
        cout << "Digite seu palpite: ";
        cin >> palpite;
        tentativas++;

        if (palpite > numeroSecreto) {
            cout << "Muito alto! Tente um numero menor." << endl;
        } else if (palpite < numeroSecreto) {
            cout << "Muito baixo! Tente um numero maior." << endl;
        } else {
            // Adivinhou!
            cout << "\n========================================" << endl;
            cout << "         PARABENS! VOCE ACERTOU!        " << endl;
            cout << "========================================" << endl;
            cout << "O numero secreto era " << numeroSecreto << "." << endl;
            cout << "Voce tentou " << tentativas << " vezes." << endl;
        }

    } while (palpite != numeroSecreto); // Continua até acertar

    return 0;
}
#include <iostream>
#include <cstdlib> // Para a função rand() e srand()
#include <ctime>   // Para a função time()

